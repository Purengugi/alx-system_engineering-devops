#!/bin/bash

# Check if the school private key already exists
if [ -f "school" ]; then
  echo "The school private key already exists."
  exit 1
fi

# Generate the RSA key pair with a passphrase
ssh-keygen -t rsa -b 4096 -f school -N "betty"

# Check if key generation was successful
if [ $? -eq 0 ]; then
  echo "RSA key pair successfully generated."
  echo "Your identification has been saved in school."
  echo "Your public key has been saved in school.pub."
else
  echo "Error generating RSA key pair."
  exit 1
fi
